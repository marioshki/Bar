script(type="text/ng-template" id="productos.html")
	div(ng-repeat="bebida in bebidas")
	dl(data-accordion).accordion.blur.text-center
		dd.text-center
			a(data-target="#panel1").text-center Bebidas
			div#panel1.content
				dl(data-tab).tabs.text-center
					dd.active.text-center.center
						a(data-target="#panel1-1").text-center Vinos
					dd.text-center.center
						a(data-target="#panel1-2").text-center Cervezas
					dd.text-center.center
						a(data-target="#panel1-3").text-center Cubatas
					dd.text-center.center
						a(data-target="#panel1-4").text-center Licores
				div.tabs-content
					div#panel1-1.content
						div(ng-repeat="v in vino")
							p.text-center {{v.nombre}} : {{v.precio}} €
					div#panel1-2.content
						div(ng-repeat="c in cerveza")
							p.text-center {{c.nombre}} : {{c.precio}} €
					div#panel1-3.content
						div(ng-repeat="c in cubata")
							p.text-center {{c.nombre}} : {{c.precio}} €
					div#panel1-4.content
						div(ng-repeat="l in licor")
							p.text-center {{l.nombre}} : {{l.precio}} €

		dd.text-center
			a(data-target="#panel2").text-center.tapas Tapas
			div#panel2.content
				dl(data-tab).tabs.text-center
					dd.text-center
						a(data-target="#panel2-1").text-center Mini-Bocadillos
					dd.text-center
						a(data-target="#panel2-2").text-center Raciones

				div.tabs-content
					div#panel2-1.content
						div(ng-repeat="m in bocadillo").text-center
							p {{m.nombre}} : {{m.precio}} €
					div#panel2-2.content
						div(ng-repeat="r in racion").text-center
							p {{r.nombre}} : {{r.precio}} €

		dd.text-center
			a(data-target="#panel3").text-center.menus Menús
			div#panel3.content
				dl(data-tab).tabs.text-center
					dd.text-center
						a(data-target="#panel3-1").text-center Lunes
					dd.text-center
						a(data-target="#panel3-2").text-center Martes
					dd.text-center
						a(data-target="#panel3-3").text-center Miercoles
					dd.text-center
						a(data-target="#panel3-4").text-center Jueves
					dd.text-center
						a(data-target="#panel3-5").text-center Viernes
					dd.text-center
						a(data-target="#panel3-6").text-center Sabado
					dd.text-center
						a(data-target="#panel3-7").text-center Domingo

				div.tabs-content
					div#panel3-1.content
						p.text-center {{lunes.descripcion}}
					div#panel3-2.content
						p.text-center {{martes.descripcion}}
					div#panel3-3.content
						p.text-center {{miercoles.descripcion}}
					div#panel3-4.content
						p.text-center {{jueves.descripcion}}
					div#panel3-5.content
						p.text-center {{viernes.descripcion}}	
					div#panel3-6.content
						p.text-center {{sabado.descripcion}}
					div#panel3-7.content
						p.text-center {{domingo.descripcion}}			
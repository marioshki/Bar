script(type="text/ng-template" id="productos.html")
	div(ng-repeat="bebida in bebidas")
	dl(data-accordion).accordion.blur
		dd
			a(data-target="#panel1") Bebidas
			div#panel1.content
				dl(data-tab).tabs
					dd.active
						a(data-target="#panel1-1") Vinos
					dd
						a(data-target="#panel1-2") Cervezas
					dd
						a(data-target="#panel1-3") Cubatas
					dd
						a(data-target="#panel1-4") Licores
				div.tabs-content
					div#panel1-1.content
						div(ng-repeat="v in vino")
							p {{v.nombre}} : {{v.precio}} €
					div#panel1-2.content
						div(ng-repeat="c in cerveza")
							p {{c.nombre}} : {{c.precio}} €
					div#panel1-3.content
						div(ng-repeat="c in cubata")
							p {{c.nombre}} : {{c.precio}} €
					div#panel1-4.content
						div(ng-repeat="l in licor")
							p {{l.nombre}} : {{l.precio}} €

		dd
			a(data-target="#panel2") Tapas
			div#panel2.content
				dl(data-tab).tabs
					dd
						a(data-target="#panel2-1") Mini-Bocadillos
					dd
						a(data-target="#panel2-2") Raciones

				div.tabs-content
					div#panel2-1.content
						div(ng-repeat="m in bocadillo")
							p {{m.nombre}} : {{m.precio}} €
					div#panel2-2.content
						div(ng-repeat="r in racion")
							p {{r.nombre}} : {{r.precio}} €

		dd
			a(data-target="#panel3") Menús
			div#panel3.content
				dl(data-tab).tabs
					dd
						a(data-target="#panel3-1") Lunes
					dd
						a(data-target="#panel3-2") Martes
					dd
						a(data-target="#panel3-3") Miercoles
					dd
						a(data-target="#panel3-4") Jueves
					dd
						a(data-target="#panel3-5") Viernes
					dd
						a(data-target="#panel3-6") Sabado
					dd
						a(data-target="#panel3-7") Domingo

				div.tabs-content
					div#panel3-1.content
						p {{lunes.descripcion}}
					div#panel3-2.content
						p {{martes.descripcion}}
					div#panel3-3.content
						p {{miercoles.descripcion}}
					div#panel3-4.content
						p {{jueves.descripcion}}
					div#panel3-5.content
						p {{viernes.descripcion}}	
					div#panel3-6.content
						p {{sabado.descripcion}}
					div#panel3-7.content
						p {{domingo.descripcion}}			